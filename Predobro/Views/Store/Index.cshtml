@model IEnumerable<Predobro.Models.Item>
@{
    ViewData["Title"] = "My Food Items";
}

<h2>My Food Items</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Item</a>

@if (!Model.Any())
{
    <p>You have not listed any items yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 50px; max-height: 50px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}