@model IEnumerable<Predobro.Models.Order>
@{
    ViewData["Title"] = "My Account";
    var user = ViewBag.User as Predobro.Models.ApplicationUser;
}

<h2>My Account</h2>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@user.FullName</h4>
        <p class="card-text"><strong>Email:</strong> @user.Email</p>
        <p class="card-text"><strong>Address:</strong> @user.Address</p>
        <p class="card-text"><strong>Phone:</strong> @user.PhoneNumber</p>
    </div>
</div>

<h3>My Orders</h3>
@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Items</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedAt.ToString("g")</td>
                <td>
                    @foreach (var item in order.OrderItems)
                    {
                        <div>@item.Item.Name (x@item.Quantity)</div>
                    }
                </td>
                <td>
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}