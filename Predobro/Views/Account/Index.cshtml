@model IEnumerable<Predobro.Models.Order>
@{
    ViewData["Title"] = "My Account";
    var user = ViewBag.User as Predobro.Models.ApplicationUser;
}

<h2>My Account</h2>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@user.FullName</h4>
        <p class="card-text"><strong>Email:</strong> @user.Email</p>
        <p class="card-text"><strong>Address:</strong> @user.Address</p>
        <p class="card-text"><strong>Phone:</strong> @user.PhoneNumber</p>
    </div>
</div>

@if (User.IsInRole("Customer"))
{
    <h3>My Orders</h3>
    @if (!Model.Any())
    {
        <p>You have no orders yet.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Date</th>
                    <th>Items</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CreatedAt.ToString("g")</td>
                    <td>
                        @foreach (var item in order.OrderItems)
                        {
                            <div>@item.Item.Name (x@item.Quantity)</div>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" 
                               class="btn btn-info btn-sm">Details</a>
                            <button type="button" class="btn btn-danger btn-sm" 
                                    data-bs-toggle="modal" data-bs-target="#deleteModal@(order.Id)">
                                Delete
                            </button>
                        </div>
                        
                        <!-- Delete Confirmation Modal -->
                        <div class="modal fade" id="deleteModal@(order.Id)" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Deletion</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete Order #@order.Id?</p>
                                        <p><strong>This action cannot be undone.</strong></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" method="post">
                                            <button type="submit" class="btn btn-danger">Delete Order</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
}
else if (User.IsInRole("Store"))
{
    <h3>Orders Containing My Items</h3>
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No orders contain your items yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>My Items</th>
                        <th>Total for My Items</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var order in Model)
                {
                    var myItems = order.OrderItems.Where(oi => oi.Item.StoreId == ViewBag.CurrentUserId).ToList();
                    var totalForMyItems = myItems.Sum(oi => oi.Item.Price * oi.Quantity);
                    
                    <tr>
                        <td>#@order.Id</td>
                        <td>
                            <div><strong>@order.Customer.FullName</strong></div>
                            <small class="text-muted">@order.Customer.Email</small>
                        </td>
                        <td>@order.CreatedAt.ToString("g")</td>
                        <td>
                            @foreach (var item in myItems)
                            {
                                <div class="mb-1">
                                    <strong>@item.Item.Name</strong><br>
                                    <small class="text-muted">
                                        Qty: @item.Quantity Ã— $@item.Item.Price.ToString("F2") = $@((item.Item.Price * item.Quantity).ToString("F2"))
                                    </small>
                                </div>
                            }
                        </td>
                        <td>
                            <strong>$@totalForMyItems.ToString("F2")</strong>
                        </td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" 
                               class="btn btn-info btn-sm">View Details</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Summary</h5>
                    <p class="card-text">
                        <strong>Total Orders:</strong> @Model.Count()<br>
                        <strong>Total Revenue:</strong> $@Model.SelectMany(o => o.OrderItems.Where(oi => oi.Item.StoreId == ViewBag.CurrentUserId)).Sum(oi => oi.Item.Price * oi.Quantity).ToString("F2")
                    </p>
                </div>
            </div>
        </div>
    }
}