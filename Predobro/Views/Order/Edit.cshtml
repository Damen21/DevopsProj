@model Predobro.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h2>Edit Order #@Model.Id</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.OrderItems.Count; i++)
        {
            <tr>
                <td>@Model.OrderItems[i].Item.Name</td>
                <td>@Model.OrderItems[i].Item.Description</td>
                <td>
                    <input type="number" name="quantities" value="@Model.OrderItems[i].Quantity" min="1" class="form-control" />
                </td>
            </tr>
        }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>