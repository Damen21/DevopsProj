@model Predobro.Models.Order
@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Shopping Cart</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (Model == null || Model.OrderItems == null || !Model.OrderItems.Any())
{
    <div class="alert alert-info">
        <p>Your cart is empty.</p>
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Browse Items</a>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.Item.ImageUrl))
                                    {
                                        <img src="@item.Item.ImageUrl" alt="@item.Item.Name" style="width: 50px; height: 50px; object-fit: cover;" class="me-3">
                                    }
                                    <span>@item.Item.Name</span>
                                </div>
                            </td>
                            <td>@item.Item.Price.ToString("C")</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <input type="number" 
                                           data-orderitem-id="@item.Id" 
                                           value="@item.Quantity" 
                                           min="1" 
                                           class="form-control form-control-sm auto-update-qty" 
                                           style="width: 70px;" />
                                    <div class="spinner-border spinner-border-sm ms-2 d-none" role="status" id="spinner-@item.Id">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </td>
                            <td>@((item.Item.Price * item.Quantity).ToString("C"))</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="orderItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total:</th>
                        <th>@Model.OrderItems.Sum(oi => oi.Item.Price * oi.Quantity).ToString("C")</th>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Continue Shopping</a>
        <form asp-action="Checkout" method="post">
            <button type="submit" class="btn btn-success">Checkout</button>
        </form>
    </div>
    
    <!-- Add form for AJAX update -->
    <form id="update-form" asp-action="UpdateCartItem" method="post" class="d-none">
        <input type="hidden" id="update-orderitem-id" name="orderItemId" value="" />
        <input type="hidden" id="update-quantity" name="quantity" value="" />
    </form>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const debounce = (func, delay) => {
                let debounceTimer;
                return function() {
                    const context = this;
                    const args = arguments;
                    clearTimeout(debounceTimer);
                    debounceTimer = setTimeout(() => func.apply(context, args), delay);
                };
            };
            
            const updateQuantity = debounce(function(input) {
                const orderItemId = input.dataset.orderitemId;
                const quantity = input.value;
                
                if (quantity <= 0) {
                    input.value = 1;
                    return;
                }
                
                // Show spinner
                const spinner = document.getElementById(`spinner-${orderItemId}`);
                spinner.classList.remove('d-none');
                
                // Set form values
                document.getElementById('update-orderitem-id').value = orderItemId;
                document.getElementById('update-quantity').value = quantity;
                
                // Submit form with fetch API
                const form = document.getElementById('update-form');
                const formData = new FormData(form);
                
                fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if (response.redirected) {
                        window.location.href = response.url;
                    } else {
                        // Hide spinner if no redirect
                        spinner.classList.add('d-none');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    spinner.classList.add('d-none');
                });
            }, 500);
            
            // Add event listeners to all quantity inputs
            document.querySelectorAll('.auto-update-qty').forEach(input => {
                input.addEventListener('change', function() {
                    updateQuantity(this);
                });
                
                input.addEventListener('input', function() {
                    updateQuantity(this);
                });
            });
        });
    </script>
}