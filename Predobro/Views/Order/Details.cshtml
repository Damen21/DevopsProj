@model Predobro.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order #@Model.Id Details</h2>
<div class="row mb-3">
    <div class="col-md-6">
        <p><strong>Date:</strong> @Model.SubmittedAt?.ToString("g")</p>
    </div>
    <div class="col-md-6">
        <p><strong>Overall Status:</strong> 
            <span class="badge @(Model.OverallStatus == OrderItemStatus.Completed ? "bg-success" : 
                                Model.OverallStatus == OrderItemStatus.ReadyForPickup ? "bg-info" : "bg-warning")">
                @Model.OverallStatus
            </span>
        </p>
    </div>
</div>

@foreach (var storeGroup in Model.OrderItems.GroupBy(oi => oi.Item.Store))
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@storeGroup.Key.FullName</h5>
            <small class="text-muted">@storeGroup.Key.Email</small>
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in storeGroup)
                {
                    <tr>
                        <td>@item.Item.Name</td>
                        <td>@item.Item.Description</td>
                        <td>@item.Quantity</td>
                        <td>@item.Item.Price.ToString("C")</td>
                        <td>
                            <span class="badge @(item.Status == OrderItemStatus.Completed ? "bg-success" : 
                                                item.Status == OrderItemStatus.ReadyForPickup ? "bg-info" : "bg-warning")">
                                @item.Status
                            </span>
                        </td>
                        <td>@((item.Item.Price * item.Quantity).ToString("C"))</td>
                    </tr>
                }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="5">Store Total:</th>
                        <th>@storeGroup.Sum(oi => oi.Item.Price * oi.Quantity).ToString("C")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Order Summary</h5>
        <p class="card-text">
            <strong>Total Items:</strong> @Model.OrderItems.Sum(oi => oi.Quantity)<br>
            <strong>Grand Total:</strong> @Model.OrderItems.Sum(oi => oi.Item.Price * oi.Quantity).ToString("C")
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
</div>